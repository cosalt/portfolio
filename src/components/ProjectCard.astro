---
interface Props {
  name: string;
  description: string;
  url: string;
  language: string;
  stars: number;
  forks: number;
}

const { name, description, url, language, stars, forks } = Astro.props;
---

<div class="project-card group bg-white p-6 rounded-lg shadow-md transition-all duration-300 hover:shadow-xl hover:bg-gray-50 hover:-translate-y-1">
  <div class="relative overflow-hidden">
    <h3 class="text-xl font-bold text-gray-800 mb-2 transition-transform group-hover:translate-x-2">
      <a href={url} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600">
        {name}
      </a>
    </h3>
    <p class="text-gray-600 mb-4 transition-transform group-hover:translate-x-1">{description || 'No description available'}</p>
    <div class="flex items-center gap-4 text-sm text-gray-500">
      {language && (
        <div class="flex items-center gap-1 transition-transform group-hover:translate-x-1">
          <span class="w-3 h-3 rounded-full bg-blue-500"></span>
          <span>{language}</span>
        </div>
      )}
      <div class="flex items-center gap-1 transition-transform group-hover:translate-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        <span>{stars}</span>
      </div>
      <div class="flex items-center gap-1 transition-transform group-hover:translate-x-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span>{forks}</span>
      </div>
    </div>
  </div>
</div>

<style>
  .project-card {
    position: relative;
    overflow: hidden;
  }
</style>